{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:  g++ build and run test-sv",
			"command": "g++",
			"args": [
				"-g",
				"tests/test-sv.cpp",
				"-I", "${workspaceFolder}",
				"-o","${workspaceFolder}/test-sv"
				,"&&","(","${workspaceFolder}/test-sv"
				,"||","echo","FAIL",")"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
